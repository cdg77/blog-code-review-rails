<% content_for(:title, "Blog |  @post.title"  ) %>

<div class="container well-lg">
  <h1><%= @post.title %></h1>
  <p>by : <%= @post.author %></p>
  <p><img src="<%= @post.images %>" alt="<%= @post.title %>" /></p>
  <br>
   <div class="well-sm">
     <p><%= @post.body %></p>
   </div>
  <hr>
  <div class="well-sm">
    <p><%= link_to "Go back to list of Posts", posts_path %></p>
    <p><%= link_to "Edit this post", edit_post_path(@post) %></p>
    <p><%= link_to "Delete this post", post_path(@post), :data => {:confirm => "You sure you wanna delete this?", :method => "delete"} %></p>
  </div>
  <hr>
</div>

<nav class="navbar navbar-default navbar-bottom" role="navigation">
  <div class="container">
    <div class="footer">
      <% if @post.tags.any? %>
      <h4>TAGS: </h4><hr>
        <ul>
          <% @post.tags.each do |tag| %>
            <li>
              <%= tag.description %>
            </li>
          <% end %>
        </ul>
        <% else %>
        <h4>This blog post has not been tagged</h4>
      <% end %>

      <p><%= link_to "Add a Tag to this Post", new_post_tag_path(@post) %></p>
    </div>
  </div>
</nav>
